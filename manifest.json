{
    "name": "Harpoon",
    "description": "Sniping fish in the open sea.",
    "version": "0.0.1",
    "manifest_version": 3,
    "permissions": ["storage", "activeTab", "scripting", "tabs", "webNavigation"],
    "content_scripts" : [
        {
            "run_at": "document_idle",
            "js": ["content.js"],
            "matches": ["*://*.opensea.io/activity/*"]
        },
        {
            "run_at": "document_start",
            "js": ["checkout.js"],
            "matches": ["*://*.opensea.io/assets/*"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }

}